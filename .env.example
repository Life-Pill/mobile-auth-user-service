# Database Configuration
DB_URL=jdbc:postgresql://localhost:5432/mobile_user_auth_db
DB_USERNAME=your_db_username
DB_PASSWORD=your_db_password

# Mail Configuration (Gmail)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# JWT Configuration
JWT_SECRET=your-secure-jwt-secret-key-at-least-256-bits
JWT_ACCESS_TOKEN_EXPIRATION=1800000
JWT_REFRESH_TOKEN_EXPIRATION=604800000

# Application URLs
FRONTEND_URL=http://localhost:3000
EMAIL_VERIFICATION_URL=http://localhost:8080/api/auth/verify-email
PASSWORD_RESET_URL=http://localhost:8080/api/auth/reset-password

# Email Expiry Configuration (in hours)
EMAIL_VERIFICATION_EXPIRY_HOURS=24
PASSWORD_RESET_EXPIRY_HOURS=1

# Branding Configuration
LOGO_URL=https://raw.githubusercontent.com/Life-Pill/mobile-auth-user-service/main/src/main/resources/static/life-pill-logo.png
SUPPORT_EMAIL=support@lifepill.com
WEBSITE_URL=https://lifepill.com

# Google OAuth (optional)
GOOGLE_OAUTH_ENABLED=false
GOOGLE_CLIENT_ID_WEB=
GOOGLE_CLIENT_ID_ANDROID=
GOOGLE_CLIENT_ID_IOS=

# CORS Configuration
CORS_ENABLED=true
CORS_ORIGINS=http://localhost:3000,http://localhost:8081

# Server
PORT=8080
