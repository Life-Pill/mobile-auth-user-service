# User Auth Service Environment Variables
# Copy this file to .env and fill in your values

# Server Configuration
PORT=8080

# API Versioning
API_VERSION=v1

# Database Configuration
DB_URL=jdbc:postgresql://localhost:5432/mobile_user_auth_db
DB_USERNAME=your_db_username
DB_PASSWORD=your_db_password
DB_CONNECTION_TIMEOUT=30000
DB_MAX_POOL_SIZE=10
DB_MIN_IDLE=5
DB_IDLE_TIMEOUT=600000
DB_MAX_LIFETIME=1800000

# JPA Configuration
JPA_DDL_AUTO=validate
JPA_SHOW_SQL=false

# Flyway Configuration
FLYWAY_ENABLED=true
FLYWAY_BASELINE=true

# Mail Configuration (Gmail)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# JWT Configuration
JWT_SECRET=your-secure-jwt-secret-key-at-least-256-bits
JWT_ACCESS_TOKEN_EXPIRATION=1800000
JWT_REFRESH_TOKEN_EXPIRATION=604800000

# Eureka Configuration
EUREKA_URI=http://localhost:8761/eureka/
EUREKA_REGISTER=true
EUREKA_FETCH_REGISTRY=true
EUREKA_FETCH_INTERVAL=30
EUREKA_PREFER_IP=true
EUREKA_LEASE_RENEWAL=30
EUREKA_LEASE_EXPIRATION=90

# Application URLs
FRONTEND_URL=http://localhost:3000
EMAIL_VERIFICATION_URL=http://localhost:8080/api/v1/auth/verify-email
PASSWORD_RESET_URL=http://localhost:8080/api/v1/auth/reset-password

# Email Expiry Configuration (in hours)
EMAIL_VERIFICATION_EXPIRY_HOURS=24
PASSWORD_RESET_EXPIRY_HOURS=1

# Branding Configuration
LOGO_URL=https://raw.githubusercontent.com/Life-Pill/mobile-auth-user-service/main/src/main/resources/static/life-pill-logo.png
SUPPORT_EMAIL=support@lifepill.com
WEBSITE_URL=https://lifepill.com

# Rate Limiting Configuration
RATE_LIMIT_LOGIN_ATTEMPTS=5
RATE_LIMIT_LOGIN_DURATION=15
RATE_LIMIT_LOGIN_USER_ATTEMPTS=10
RATE_LIMIT_REGISTER_ATTEMPTS=3
RATE_LIMIT_REGISTER_DURATION=60
RATE_LIMIT_REGISTER_EMAIL_ATTEMPTS=5
RATE_LIMIT_PASSWORD_RESET_ATTEMPTS=3
RATE_LIMIT_PASSWORD_RESET_DURATION=60

# Google OAuth (optional)
GOOGLE_OAUTH_ENABLED=false
GOOGLE_CLIENT_ID_WEB=
GOOGLE_CLIENT_ID_ANDROID=
GOOGLE_CLIENT_ID_IOS=

# CORS Configuration
CORS_ENABLED=true
CORS_ORIGINS=http://localhost:3000,http://localhost:8081
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Authorization,Content-Type
CORS_MAX_AGE=86400

# Actuator Configuration
ACTUATOR_ENDPOINTS=health,info,metrics,prometheus,refresh
ACTUATOR_HEALTH_DETAILS=when_authorized
ACTUATOR_HEALTH_COMPONENTS=when_authorized
HEALTH_MAIL_ENABLED=true

# Application Info
INFO_APP_NAME=LifePill Mobile User Auth Service
INFO_APP_DESC=JWT-based Authentication Service for LifePill Mobile
INFO_APP_VERSION=v1.0.0

# Logging Configuration
LOG_PATH=./logs
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_APP=DEBUG
LOG_LEVEL_SECURITY=INFO
LOG_LEVEL_CLOUD=INFO

# Swagger/OpenAPI
SWAGGER_ENABLED=true
SWAGGER_UI_ENABLED=true

# Environment
ENVIRONMENT=development
ZONE=primary
HOSTNAME=localhost
